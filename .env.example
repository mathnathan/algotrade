# Alpaca API Configuration (Get these from your Alpaca paper trading account)
ALPACA_API_KEY=your_paper_trading_key_here
ALPACA_SECRET_KEY=your_paper_trading_secret_here

# Database URLs (automatically configured in docker-compose)
# DATABASE_URL=postgresql://trading_user:secure_trading_password@postgres:5432/trading_db
# POSTGRES_ADMIN_URL=postgresql://postgres:postgres_admin_password@postgres:5432/postgres

# Model Configuration
HUGGINGFACE_CACHE_DIR=./data/models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Trading Configuration
POSITION_SIZE_PCT=0.02  # 2% of portfolio per trade
STOP_LOSS_PCT=0.01      # 1% stop loss
TAKE_PROFIT_PCT=0.015   # 1.5% take profit
TRADING_SYMBOL=SPY

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/trading.log